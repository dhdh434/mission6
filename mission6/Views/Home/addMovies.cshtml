@{
    ViewData["Title"] = "Add Movies";
}


@model mission6.Models.movieInput
<h2>Add Movie NOW!!!</h2>

<div>
    <form method="post">

        <div asp-validation-summary="All"></div>
        <input asp-for="MovieId" type="hidden" />

        <label asp-for="Title">Title:</label>
        <input asp-for="Title" /><br />

        <label asp-for="CategoryId">Category:</label>
        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category m in ViewBag.Categories)
            {
                <option value="@m.CategoryId">@m.CategoryName</option>
            }
        </select><br />

        <label asp-for="Year">Year:</label>
        <input asp-for="Year" /><br />

        <label asp-for="Director">Director:</label>
        <input asp-for="Director" /><br />

        <label asp-for="Rating"></label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select><br />

        <label asp-for="Edited"></label>
        <select asp-for="Edited">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select><br />

        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo" /><br />

        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" /><br />

        <button type="submit">Submit Movie</button>

    </form>

    
    
    
</div>